#include <stdlib.h>
#include <stdio.h>
#include <iostream>
using namespace ::std;
int main()
{/*предусловие:дан массив символов из 11 элементов
 постусловие: все строчные буквы переводятся в верхний регистр*/
	system("Chcp 1251");
	char str[] = "Hello World"; // инциализация массива строковой константой
	cout << "Изначальная строчка: " << str<< "\n";
	cout << "Обновленная строчка: ";
	for (int i = 0; i < 11; i++) // цикл
		putchar(toupper(str[i])); // функция, преобразующая символы в верхний регистр
	printf("\n");
}





